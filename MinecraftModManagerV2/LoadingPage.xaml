<UserControl x:Class="MinecraftModManagerV2.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MinecraftModManagerV2"
      mc:Ignorable="d"
      d:DesignHeight="200" d:DesignWidth="250">

    <Grid>
        <ProgressBar Name="progression" Margin="50" Value="50" Height="20" VerticalAlignment="Center" BorderBrush="White">
            <ProgressBar.Background>
                <SolidColorBrush Color="#FFE6E6E6" Opacity="0.2" />
            </ProgressBar.Background>
            <ProgressBar.Foreground>
                <ImageBrush ImageSource="gradient.png" />
            </ProgressBar.Foreground>
        </ProgressBar>
        <TextBlock TextWrapping="Wrap" Margin="50,66,50,116" Name="Displayer" TextAlignment="Center" VerticalAlignment="Center" Foreground="White" FontFamily="Segoe UI Light" FontSize="14" />
    </Grid>
</UserControl>