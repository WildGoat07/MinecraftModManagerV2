<UserControl x:Class="MinecraftModManagerV2.WarningControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MinecraftModManagerV2"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid Margin="0, 0, 0, 40">
            <Image Source="warning.png" HorizontalAlignment="Left" Margin="10,0,0,0" Stretch="None" />
            <TextBlock Name="textDisplay" Margin="122,0,10,0" Text="text" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="14" VerticalAlignment="Center" />
        </Grid>
        <Button Content="OK" Height="30" VerticalAlignment="Bottom" Margin="0,0,5,5" Foreground="White" FontFamily="Segoe UI Light" FontSize="14" HorizontalAlignment="Center" Width="91" Click="Button_Click" />
    </Grid>
</UserControl>